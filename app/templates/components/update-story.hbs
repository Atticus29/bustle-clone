{{#if updateDesired}}
<form id="new-story-form">
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" placeholder=story.author}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" placeholder=story.title}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date id="date" type="date" placeholder=story.date}}
  </div>
  <div class="form-group">
    <label for="body">Story</label>
    {{input value=body id="body" placeholder=story.body}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input value=image id="image" placeholder=story.image}}
  </div>
  <button class="btn btn-warning" {{action 'update' story}}>Submit</button>

</form>
{{else}}
<button {{action 'updateDesired'}} class="btn btn-primary">Update</button>
{{/if}}
