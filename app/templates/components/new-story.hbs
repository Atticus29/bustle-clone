{{#if addNewStory}}
<form id="new-story-form">
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date id="date" type="date"}}
  </div>
  <div class="form-group">
    <label for="body">Story</label>
    {{input value=body id="body"}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input value=image id="image"}}
  </div>
  <button class="btn btn-warning" {{action 'saveStory'}}>Submit</button>
</form>
{{else}}
<button class="btn btn-warning" {{action 'storyFormShow'}}>Add New Story</button>
{{/if}}
